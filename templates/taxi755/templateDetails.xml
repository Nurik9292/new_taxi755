<?xml version="1.0" encoding="utf-8"?>
<extension type="template" client="site">
    <name>taxi755</name>
    <version>1.0.0</version>
    <creationDate>August 2025</creationDate>
    <author>Claude AI Assistant</author>
    <authorEmail>support@taxi755.ru</authorEmail>
    <copyright>Copyright (C) 2025 Taxi755. All rights reserved.</copyright>
    <description>Modern responsive template for Taxi755 service. White/Yellow color scheme with clean design.</description>

    <files>
        <filename>component.php</filename>
        <filename>error.php</filename>
        <filename>index.php</filename>
        <filename>offline.php</filename>
        <filename>templateDetails.xml</filename>
        <folder>css</folder>
        <folder>js</folder>
        <folder>html</folder>
        <folder>images</folder>
        <folder>language</folder>
    </files>

    <positions>
        <!-- Header positions -->
        <position>logo</position>
        <position>phone</position>
        <position>mainmenu</position>

        <!-- Hero section -->
        <position>hero</position>

        <!-- Main content positions -->
        <position>breadcrumbs</position>
        <position>sidebar</position>

        <!-- Home page sections -->
        <position>services</position>
        <position>features</position>
        <position>payment</position>
        <position>reviews</position>
        <position>news</position>
        <position>partners</position>
        <position>additional</position>
        <position>about</position>

        <!-- Footer positions -->
        <position>footer-contacts</position>
        <position>footer-services</position>
        <position>footer-info</position>
        <position>footer-partners</position>
        <position>footer-bottom</position>

        <!-- System positions -->
        <position>debug</position>
    </positions>

    <config>
        <fields name="params">
            <fieldset name="basic" label="TPL_TAXI755_BASIC_FIELDSET_LABEL">

                <field
                        name="logo"
                        type="media"
                        label="TPL_TAXI755_LOGO_LABEL"
                        description="TPL_TAXI755_LOGO_DESC"
                        default=""
                />

                <field
                        name="sitename"
                        type="text"
                        label="TPL_TAXI755_SITENAME_LABEL"
                        description="TPL_TAXI755_SITENAME_DESC"
                        default="Такси 755"
                />

                <field
                        name="phone"
                        type="tel"
                        label="TPL_TAXI755_PHONE_LABEL"
                        description="TPL_TAXI755_PHONE_DESC"
                        default="+7 (926) 641-08-96"
                />

                <field
                        name="email"
                        type="email"
                        label="TPL_TAXI755_EMAIL_LABEL"
                        description="TPL_TAXI755_EMAIL_DESC"
                        default="info@taxi755.ru"
                />

                <field
                        name="address"
                        type="textarea"
                        label="TPL_TAXI755_ADDRESS_LABEL"
                        description="TPL_TAXI755_ADDRESS_DESC"
                        rows="3"
                        default="Москва, ул. Маломосковская, 22с1"
                />

            </fieldset>

            <fieldset name="sedi" label="TPL_TAXI755_SEDI_FIELDSET_LABEL">

                <field
                        name="sedi_key"
                        type="text"
                        label="TPL_TAXI755_SEDI_KEY_LABEL"
                        description="TPL_TAXI755_SEDI_KEY_DESC"
                        default="1A047663-E78D-44C3-A043-C0A0D2960631"
                />

                <field
                        name="sedi_enable"
                        type="radio"
                        label="TPL_TAXI755_SEDI_ENABLE_LABEL"
                        description="TPL_TAXI755_SEDI_ENABLE_DESC"
                        class="btn-group btn-group-yesno"
                        default="1"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

            </fieldset>

            <fieldset name="advanced" label="TPL_TAXI755_ADVANCED_FIELDSET_LABEL">

                <field
                        name="enable_sidebar"
                        type="radio"
                        label="TPL_TAXI755_SIDEBAR_LABEL"
                        description="TPL_TAXI755_SIDEBAR_DESC"
                        class="btn-group btn-group-yesno"
                        default="1"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field
                        name="home_sections"
                        type="checkboxes"
                        label="TPL_TAXI755_HOME_SECTIONS_LABEL"
                        description="TPL_TAXI755_HOME_SECTIONS_DESC"
                        multiple="true"
                        default="services,features,payment,reviews,news,partners,additional,about"
                >
                    <option value="services">Услуги</option>
                    <option value="features">Преимущества</option>
                    <option value="payment">Онлайн оплата</option>
                    <option value="reviews">Отзывы</option>
                    <option value="news">Новости</option>
                    <option value="partners">Партнеры</option>
                    <option value="additional">Дополнительные услуги</option>
                    <option value="about">О компании</option>
                </field>

            </fieldset>

        </fields>
    </config>

</extension>